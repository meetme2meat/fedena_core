

<div id="content-header">
  <%= image_tag("/images/manage_news/manage_news_logo.png") %>
  <h1><%= t('events') %></h1>
  <h3><%= t('edit_event') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <%= flash[:notice] %>
  <% form_for :event do |f| %>
    <%= error_messages_for 'events' %>
    <div class="label-field-pair">
      <label for="start-date"><%= t('start_date') %>:</label>
      <div class="text-input-bg"><%= calendar_date_select_tag "event[start_date]", I18n.l(@event.start_date,:format=>("%B %d, %Y,%I:%M %P")), :time => true, :readonly=>true, :popup=>"force"%></div>
    </div>
    <div class="label-field-pair">
      <label for="end-date"><%= t('end_date') %>:</label>
      <div class="text-input-bg"><%= calendar_date_select_tag "event[end_date]", I18n.l(@event.end_date,:format=>("%B %d, %Y,%I:%M %P")), :time => true , :readonly=>true, :popup=>"force" %></div>
    </div>
    <div class="label-field-pair">
      <label for="title"><%= t('title') %>:</label>
      <div class="text-input-bg"><%= f.text_field :title %></div>
    </div>
    <div class="label-field-pair">
      <label for="description"><%= t('description') %>:</label>
    </div>
    <%= f.text_area "description" %>
    <div class="label-field-pair">
      <label for="is-holiday"><%= t('is_holiday') %></label>
      <%= f.check_box :is_holiday %>
    </div>
    <div class="label-field-pair">
      <label for="end-date"> <%= t('common_event') %></label>
      <%= f.check_box :is_common %>
    </div>
    <%= f.submit "â–º#{t('update_event')}" %>
  <% end %>
</div>
