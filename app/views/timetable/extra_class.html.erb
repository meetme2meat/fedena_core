

<div id="content-header">
<%= image_tag("/images/show_timetable.png") %>
  <h1><%= t('timetable_text') %></h1>
  <h3><%= t('swap_class') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">
  <% form_remote_for :extra_class do |f| %>
  <div class="label-field-pair">
    <label for="student_date_of_birth"><%= t('select') %> <%= t('date_text') %></label>
    <div class="text-input-bg">
      <%= calendar_date_select_tag 'extra_class[date]',
        I18n.localize(Date.today, :format=>:normal) , :year_range => 40.years.ago..0.years.ago %>
    </div>
  </div>
  <div class="label-field-pair">
    <label for="student_grade"><%= t('course_text') %> & <%= t('batch') %></label>
    <div class="text-input-bg"><%= select :extra_class, :batch_id, Batch.active.map {|b| [b.full_name, b.id]} %></div>
  </div>

   <%= f.submit "â–º #{t('ok')}", :class=>'submit-button' %>
  <% end %>
</div></div>
<div id="extra-class-form"></div>