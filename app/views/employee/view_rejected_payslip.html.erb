

<div id="content-header">
  <%= image_tag("/images/HR/show_hr.png") %>
  <h1> <%= t('rejected_payslip') %></h1>
  <h3><%= t('individual_employee') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>



<div id="page-yield">

    <div class="drop-down-box">
      <label for="category_prefix"><%= t('select_payslip_month_year') %></label>
      <div class="text-input-bg"> <%= select :employee, :rejected_payslip, @payslips.map { |s| [s.salary_date.strftime("%B %Y"), s.salary_date] },
          {:prompt => "#{t('select_a_month')}"},
          {:onChange => "#{remote_function(:url => {:action => "update_rejected_payslip"},
                                           :with => "'salary_date='+value+'&emp_id='+#{params[:id]}")}"} %> </div>
    </div>
    <div class="extender"></div>
    <div id="rejected_payslip"></div>
</div>