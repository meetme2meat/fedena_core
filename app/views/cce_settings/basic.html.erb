

<% content_for :head do  %>
  <%= stylesheet_link_tag 'exam/index.css' %>
<% end %>
<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1>CCE Settings</h1>
  <h3>Basic Settings</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "CCE Grade Sets",:controller=>'cce_grade_sets' %></div>
      <div class="link-descr">Manage Grade sets and grades.</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "CCE Exam Categories",:controller=>'cce_exam_categories' %></div>
      <div class="link-descr">Manage CCE Exam Categories</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "CCE Weightages",:controller=>'cce_weightages' %></div>
      <div class="link-descr">Manage CCE Weightages.</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "Assign Weightages",:controller=>'cce_weightages',:action=>"assign_weightages" %></div>
      <div class="link-descr">Assign Weightages to Courses.</div>
    </div>

    <div class="extender"></div>
  </div>
</div>

