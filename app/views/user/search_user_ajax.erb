




 <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
        <% unless @user.blank? %>
          <tr class="tr-head">
            <td>
              <%= t('sl_no') %>
            </td>
            <td>  <%= t('name') %></td>
            <td>
                 <%= t('username') %>
            </td>
            <td>   <%= t('role') %></td>

          </tr>
          <tr class="tr-blank"></tr>
          <% @user.each_with_index do |u, i| %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
              <td class="col-1"><%= i+1 %></td>
               <td class="col-2"><%=  link_to u.full_name, :controller => 'user', :action => 'profile', :id => u.username%></td>
               <td class="col-4"><%=  link_to u.username, :controller => 'user', :action => 'profile', :id => u.username%></td>
              <td class="col-4"><%= u.role_name %></td>
            </tr>
          <% end %>
        <% else %>

          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-2"><%= t('no_users') %></td>
          </tr>
        <% end %>
      </table>