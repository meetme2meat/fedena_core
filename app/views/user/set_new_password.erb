


<div id="wrapper">
  <div id="top_logo">
    <%= image_tag current_school_detail.logo.url %>
  </div>
  <div id="login_area_bg">

    <% form_for :set_new_password do |u| %>

      <div id="login_area">
        <label for="username"><%= t('new_password') %></label>
        <div id="username_textbox_bg">
          <%= u.password_field :new_password %>
        </div>

        <label for="password"><%= t('confirm_password') %></label>
        <div id="password_textbox_bg">
          <%= u.password_field :confirm_password %>
        </div>

        <div id="resetpw_area">
          <%= submit_tag "#{t('reset')}", :class => "submit" %>
        </div>


        <% unless flash[:notice].nil? %>
          <div id="notice"> <%= flash[:notice] %></div>
        <% end %>

      </div>
    </div>
  <% end %>
</div>

<div id="help_forgot_pw">
  <div id="footer_links">
    &nbsp;
  </div>
</div>

<div id="footer">
  <div id="footer_logo">
    <div id="powered_by">
      <%= t('powered_by') %> <a href=<%= "#{FEDENA_SETTINGS[:company_url]}" %> target="_blank"><%= FEDENA_SETTINGS[:company_name] %></a>
    </div>
  </div>
</div>
