

<div id="content-header">
  <%= image_tag("/images/show_settings.png") %>
  <h1><%= t('courses_text') %></h1>
  <h3><%= t('home') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('manage_course')}" ,:action=>'manage_course' %> </div>
      <div class="link-descr"><%= t('manage_course_and_create_batches') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('manage_batch')}" ,:action=>'manage_batches' %>  </div>
      <div class="link-descr"><%= t('manage_active_batches') %></div>
    </div>

    <div class="extender"></div>
  </div>
</div>
