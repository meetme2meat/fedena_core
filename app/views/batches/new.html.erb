

<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('courses_text') %></h1>
  <h3><%= t('new_batch') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= link_to "#{t('courses_text')}", courses_path %> &raquo;
      <%= link_to @course.full_name, @course %> &raquo;
      <%= t('new_batch') %>
    </div>

    <% form_for [@course, @batch] do |f| %>
      <%= f.error_messages  %>
      <div class="label-field-pair">
        <div class="label-container"><%= t('name') %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>


      <div class="label-field-pair">
        <div class="label-container"><%= t('start_date') %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[start_date]',  I18n.l(Date.today,:format=>:default), :popup=>"force"%></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= t('end_date') %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[end_date]',  I18n.l(Date.today + 1.year,:format=>:default), :popup=>"force" %></div>
      </div>


      <div class="label-field-pair">
        <div class="label-container1"><label><%= t('import_subject') %></label></div>
        <div class="input-container"><%= check_box_tag 'import_subjects',"0",false %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><label><%= t('import_fees') %></label></div>
        <div class="input-container"><%= check_box_tag 'import_fees',"0",false %></div>
      </div>

      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>

    <% end %>

    <div class="extender"></div>

  </div></div>
