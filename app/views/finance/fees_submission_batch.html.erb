

<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('fees_submission') %></h1>
  <h3><%= t('student_fees_submission') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">

  <div id="batchs1">
    <% form_for :fees_submission_batch do %>
      <div class="label-field-pair"><label><%= t('select_a_batch') %></label>
        <div class="text-input-bg"> <%= select :fees_submission, :batch_id, @batches.map { |c| [c.full_name, c.id] },
            {:prompt => "#{t('select_a_batch')}"},
            {:onChange => "#{remote_function(:url => {:action => "update_fees_collection_dates"}, :with => "'batch_id='+value")}"}%> </div>
      </div>
      <div class="label-field-pair"><label><%= t('select_fee_collection_date') %></label>

        <div class="text-input-bg">
          <div id="fees_collection_dates">
            <%= render :partial => "fees_collection_dates"  %>
          </div>
        </div>
      </div>
    <% end %>
    <div id="student"> </div>

    <div id="modal-box" style="display:none;"></div>
  </div>
  <div class="extender"></div>
</div>