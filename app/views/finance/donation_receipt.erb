

<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('donations') %></h1>
  <h3><%= t('donation_receipt') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">

    <div class="field1"><%= t('donor') %>:</div>
    <div class="val"> <%= @donation.donor %></div>

    <div class="field1"><%= t('description') %>: </div>
    <div class="val"><%= @donation.description %></div>

    <div class="field1"><%= t('amount') %>: </div>
    <div class="val"><%= @donation.amount %></div>
    <div class="field1"><%= t('transaction_id') %>: </div>
    <div class="val"><%= @donation.transaction_id unless @donation.transaction_id.nil? %></div>
    <div class="submit_button">
      <%= link_to "â–º #{t('print_receipt')}", {:action => 'donation_receipt_pdf', :id => @donation.id}, :format => 'pdf', :target => '_blank' %>
    </div>
  </div>
</div>