

<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('incomes') %></h1>
  <h3><%= t('income_list') %></h3>
  <div id="app-back-button">
   <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <div class="box">
     <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
    <% form_for :report, :url => {:action => 'income_list_update'} do |form| %>
      <div class="label-field-pair">
        <label><%= t('select_start_date') %>:</label>
        <div class="input-container"><%= calendar_date_select_tag 'start_date', I18n.l(Date.today,:format=>:default),:popup=>:force %></div>
      </div>
      <div class="label-field-pair">
        <label><%= t('select_end_date') %>: </label>
        <div class="input-container"><%= calendar_date_select_tag 'end_date', I18n.l(Date.today,:format=>:default),:popup=>:force %></div>
      </div>

      <%=  submit_tag "â–º #{t('ok')}",:class=>'submit_button' %>
    <%end%>

  </div>

</div>