

<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('inance_monthly_report') %></h1>
  <h3><%= t('direct_expenses') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <%expenses_total = 0%>
  <div id="fees-table">
    <div class="fees-th">
      <div class="fees-table-description"><%= t('description') %></div>
      <div class="fees-table-expenses"><%= t('amount') %></div>
    </div>

    <% @transactions_not_fees.each do |t| %>

      <% unless t.category.is_income? %>
        <div class="fees-tr">
          <div class="fees-table-description"><%=t.title %></div>
          <div class="fees-table-expenses"><%=t.amount %></div>
          <%expenses_total +=t.amount%>
        </div>
      <% end %>
    <%end%>
    <br/>
    <div class="fees-th">
      <div class="fees-table-description"><%= t('total_expenses') %></div>
      <div class="fees-table-expenses"><%=expenses_total%></div>
    </div>

  </div>
</div>
