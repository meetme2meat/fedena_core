

<div id="content-header">
  <%= image_tag("/images/show_finance.png") %>
  <h1><%= t('asset_view') %></h1>
  <h3><%= @asset.title %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">


  <div id="asset-body">
    <div id="asset-title"><%= t('asset_name') %> : <%= @asset.title%></div>
    <div id="asset-description"><%= @asset.description %></div>
    <br/>
    <div id="asset-amt"><%= t('amount') %> : <%=  @currency_type + " "%><%= @asset.amount%></div>
    <div id="asset-date"><%= t('created_at') %> : <%= I18n.l(@asset.created_at,:format=>"%A, %d %B, %Y") %></div>
  </div>



</div>