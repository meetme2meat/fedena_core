

<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('transactions') %></h1>
  <h3><%= t('finance_academic_year_report') %></h3>
  <div id="app-back-button">
   <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <div class="label-field-pair">
    <label for="monthly_payslip_salary_date">Select Year</label>
    <div class="text-input-bg">


      <%= select_year Date.today,{:prompt=> "#{t('select_year')}",:end_year => 2050},
        {:onChange => "#{remote_function(:url => {:action => "update_year_report"},
        :with => "'date='+value")}"}%>
    </div>
  </div>

</div>
<div id ="year"></div>