

<% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>

 <table id="listing">
  <tr class="tr-head">
    <td><%= t('name') %></td>
    <td><%= t('start_date') %></td>
    <td><%= t('end_date') %></td>
    <td><%= t('due_date') %></td>
    <td></td>
  </tr>

  <% @finance_fee_collections.each do |f| %>
    <tr class="tr-<%= cycle('odd', 'even')%> ">
      <td class="col-2"><%= f.name%></td>
      <td class="col-3"><%= f.start_date %></td>
      <td class="col-3"><%= f.end_date %></td>
      <td class="col-3"><%= f.due_date %></td>
      <td class="col-1">
        <div class="edit"><%= link_to_remote t('edit_text'), :url => {:action => 'fee_collection_edit', :id => f.id} %></div>
        <% unless f.check_fee_category == false %>
          <div class="delete"><%= link_to_remote t('delete_text'), :url => {:action => 'fee_collection_delete', :id => f.id} %></div>
        <% end %>
      </td>
   </tr>
  <% end %>
</table>