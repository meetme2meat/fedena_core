

<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('asset_liability_management') %></h1>
  <h3><%= t('liability') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">
  <div class="link-box">
    <div class="link-heading">
      <%= link_to_function("#{t('create_text')}") { |page|
        page.replace_html 'modal-box', :partial => 'create_liability_form'
        page << "Modalbox.show($('modal-box'), {title: '#{t('create_new_liability')}', width: 500});"
      } %>
    </div>
    <div class="link-descr"><%= t('create_new_liability') %></div>
  </div>

  <div class="link-box">
    <div class="link-heading"><%= link_to "#{t('view')}", :action => "view_liability" %> </div>
    <div class="link-descr"><%= t('liability_view') %></div>
  </div>

  <div id="modal-box" style="display:none;"></div>
</div>
</div>