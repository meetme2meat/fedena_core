

<div id="content-header">
  <%= image_tag("/images/HR/leave-new.png") %>
  <h1><%= t('full_leave_reset') %></h1>
  <h3><%= t('reset_leave_count_for_all') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div id="box">

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <div id="main-reset-box">
      <div id="reset-box">
        <p> <%= t('reset_count_msg') %></p>
        <div id="skip">
          <%= link_to_remote("► #{t('reset')}",
            :url => {:action =>'update_employee_leave_reset_all'} ) %>
        </div>
        <div id="skip1">
          <%= link_to "► #{t('cancel')}", { :action => "manual_reset",} %>
        </div>


      </div>
    </div>


  </div>


</div>