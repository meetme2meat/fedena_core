

<div id="content-header">
  <%= image_tag("/images/attendence/attendence.png") %>
  <h1><%= t('employee_attendance_text') %></h1>
  <h3><%= t('home') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <div class="box">

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('add_type')}", :controller=>"employee_attendance", :action=>"add_leave_types" %></div>
      <div class="link-descr"><%= t('add_and_edit_employee_leave_types') %>.</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('attendance_register')}", :controller=>"employee_attendance", :action=>"register" %></div>
      <div class="link-descr"><%= t('register_attendance') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('attendance_report')}", :controller=>"employee_attendance", :action=>"report" %></div>
      <div class="link-descr"><%= t('attendance_report') %></div>
    </div>

  </div>
</div>