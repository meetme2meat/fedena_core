

<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1>Co Scholastic Group</h1>
  <h3>Assign Co Scholastic Groups to courses</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>

  </ul>
</div>

<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="label-field-pair">
    <label for="course_id"><%= t('select_a_course') %></label>
    <%= image_tag("loader.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader",
      :style =>"display: none;" ) %>
    <div class="text-input-bg">
      <%= select :course, :course_id,
        @courses.map {|b| [b.full_name, b.id]},
        {:prompt => "#{t('select_a_course')}"},
        {:onChange => "#{remote_function(:url => {:action => "select_observation_groups"},
        :with => "'course_id='+ value",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"
        )}"} %>
    </div>
  </div>
  <div id="select_observation_group"></div>
</div>