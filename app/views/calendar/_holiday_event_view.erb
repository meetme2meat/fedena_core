


  <% unless @events.empty? %>
    <div class="current-date"> <%= I18n.l(@date,:format => :month_year) %> </div>
    <% @events.each do |h| %>
      <div class="events">
        <div class="title">
          <div class="legend-icon" style='background:#00b400;'></div>
          <%= h.title %></div>
        <div class="extender"></div>
        <div class="desc"><%= h.description %></div>
        <% if permitted_to? :edit_event, :event %>
        <%= link_to "#{t('edit_text')}",{:controller=>'event',:action=>'edit_event',:id=>h.id},:class=>"delete" %>
        <% end %>
        <% if permitted_to? :event_delete, :calendar %>
        <%= link_to "#{t('delete_text')}",{:action=>'event_delete',:id=>h.id},:confirm=>"#{t('delete_confirm_msg')}",:class=>"delete" %>
        <% end %>
        <div class="extender"></div>
      </div>
    <% end %>
  <% end %>

